/* Your program, named  Shipping.java should ask for the weight of the package and display the shipping cost.
If the weight is negative or zero, display a message 'Invalid input.'
If the weight is greater than 20, display a message 'The package cannot be shipped.'

0 < w <= 1	3.5
1 < w <= 3	5.5
3 < w <= 10	8.5
10 < w <= 20	10.5
*/

import java.util.Scanner; //imports Scanner

public class Nguyen_Li_Costofshipping
{
	public static void main(String[] args)
	{
		//variables
		double w;	//weight
		Scanner keyboard = new Scanner (System.in);

		//User prompts
		System.out.println("Enter the weight of pacakge in pounds: ");
		w = keyboard.nextDouble();

		//boolean
		if (w < 0)
			System.out.println("Invalid input.");
		else if (0 < w & w <= 1)
			System.out.println("Cost: $3.5");
		else if (1 < w && w <= 3)
			System.out.println("Cost: $5.5");
		else if (3 < w && w <= 10)
			System.out.println("Cost: $8.5");
		else if (10 < w && w <= 20)
			System.out.println("Cost: $10.5");
		else if (w > 20)
			System.out.println("The package cannot be shipped");
	}
}
